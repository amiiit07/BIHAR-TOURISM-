<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/css/admin.css">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(to right, #e8eaf6, #f3e5f5);
      padding: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
      color: #333;
    }

    .top-bar {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }

    .top-bar a {
      background-color: #4CAF50;
      color: white;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 8px;
      transition: background-color 0.3s ease;
    }

    .top-bar a:hover {
      background-color: #388e3c;
    }

    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
    }

    .card {
      background: rgba(255, 255, 255, 0.8);
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.2);
      overflow: hidden;
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-10px);
    }

    .card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-bottom: 1px solid #ccc;
    }

    .card-body {
      padding: 15px;
    }

    .card-body h3 {
      margin: 0;
      font-size: 1.2em;
    }

    .card-body p {
      font-size: 0.9em;
      margin: 10px 0;
    }

    .card-actions {
      display: flex;
      justify-content: space-between;
      margin-top: 10px;
    }

    .card-actions a,
    .card-actions button {
      padding: 8px 12px;
      font-size: 0.9em;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
    }

    .edit-btn {
      background-color: #0288d1;
      color: white;
    }

    .edit-btn:hover {
      background-color: #01579b;
    }

    .delete-btn {
      background-color: #e53935;
      color: white;
    }

    .delete-btn:hover {
      background-color: #b71c1c;
    }
    .card-body p {
  max-height: 50px;
  overflow: hidden;
  text-overflow: ellipsis;
}

  </style>
</head>
<body>

<h1>Admin Dashboard</h1>

<div class="top-bar">
  <a href="/destinations/admin/new">âž• Add New Destination</a>
</div>

<div class="card-grid">
  <% destinations.forEach(dest => { %>
    <div class="card">
      <img src="<%= dest.image %>" alt="<%= dest.name %>">
      <div class="card-body">
        <h3><%= dest.name %></h3>
        <p><%= dest.location %></p>

        <div class="card-actions">
          <a href="/destinations/admin/<%= dest._id %>/edit" class="edit-btn">Edit</a>
          <form action="/destinations/<%= dest._id %>?_method=DELETE" method="POST" style="display:inline;">
           

            <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this?')">Delete</button>
          </form>
        </div>
      </div>
    </div>
  <% }) %>
</div>

</body>
</html>
