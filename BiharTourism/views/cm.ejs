    width: 80%;
    max-width: 700px;
    background: white;
    margin: auto;
    padding: 20px;
    border-radius: 15px;
    box-shadow: 0 5px 25px rgba(0,0,0,0.2);
}

.cm-card img {
    width: 100%;
    height: 350px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 20px;
}

.cm-btn {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 20px;
    background: #ff4141;
    color: #fff;
