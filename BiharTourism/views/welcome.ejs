    /* ---------------- PHOTO GALLERY ---------------- */
/* Photo Gallery Section */
.photo-gallery {
    margin-top: 50px;
    width: 90%;
    max-width: 1200px;
    text-align: center;
}

.gallery-title {
    font-size: 2.4rem;
    font-weight: 700;
    margin-bottom: 25px;
    color: #d40000;
    text-shadow: 1px 1px 4px rgba(0,0,0,0.2);
}

/* Clean Grid Layout */
.gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 22px;
    justify-items: center;
}

/* Same size images */
.gallery-grid img {
    width: 100%;
    height: 230px;         /* FIXED HEIGHT */
    object-fit: cover;     /* crop but keep looking perfect */
    border-radius: 15px;
    cursor: pointer;
    transition: 0.3s ease;
    box-shadow: 0 6px 18px rgba(0,0,0,0.25);
}

/* Hover Effect */
.gallery-grid img:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 28px rgba(0,0,0,0.35);
}

/* Lightbox */
.lightbox {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.85);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
}

.lightbox img {
    max-width: 90%;
    max-height: 90%;
    border-radius: 10px;
}


    /* Responsive */
    @media (max-width: 900px) {
      .gallery-grid { column-count: 2; }
    }
    @media (max-width: 600px) {
      .gallery-grid { column-count: 1; }
    }

